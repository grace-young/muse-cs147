<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.gracie.muse">

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewStripActivity" />
        <activity android:name=".Register" />
        <activity android:name=".InviteActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".PanelViewSlideActivity" />
        <activity android:name=".Onboarding1Explore" />
        <activity android:name=".OnboardingWelcome" />
        <activity android:name=".OnboardingPanelIntro" />
        <activity android:name=".OnboardingStripIntro" />
        <activity android:name=".OnboardingContribute" />
        <activity android:name=".OnboardingCreate" />
        <activity android:name=".StripViewActivity"></activity>
    </application>
</manifest>